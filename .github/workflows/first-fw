name: Web Regressive E2E

on:
  push:
    branches: ["main"]

  pull_request:
    branches: ["main"]

  workflow_dispatch:
    inputs:
      suite:
        description: "Suite/pasta para rodar (ex: Resources, Resources/Transfer, Resources/BillPay)"
        required: true
        default: "Resources"

  # ✅ Se quiser agendamento, DESCOMENTE o bloco abaixo (senão deixe comentado e não use 'schedule:' vazio)
  # schedule:
  #   - cron: "0 3 * * *"  # 03:00 UTC (~00:00 em SP)

jobs:
  robot:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Install Google Chrome
        run: |
          sudo apt-get update
          sudo apt-get install -y wget gnupg
          wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | sudo gpg --dearmor -o /usr/share/keyrings/google-linux-keyring.gpg
          echo "deb [arch=amd64 signed-by=/usr/share/keyrings/google-linux-keyring.gpg] http://dl.google.com/linux/chrome/deb/ stable main" | sudo tee /etc/apt/sources.list.d/google-chrome.list
          sudo apt-get update
          sudo apt-get install -y google-chrome-stable

      - name: Run Robot Tests (headless)
        run: |
          mkdir -p Results
          robot -d Results -v HEADLESS:True "${{ github.event.inputs.suite || 'Resources' }}"

      - name: Upload Robot Artifacts (report/log/output + evidences)
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: robot-results
          path: |
            Results/**
          if-no-files-found: warn
          retention-days: 14
